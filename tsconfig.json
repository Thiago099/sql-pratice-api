{
    "compilerOptions": {
        "outDir": "dist", 
        "target": "ES6",
        "noEmitOnError": true,
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "types": [ "node" ],
        "typeRoots": [ "../node_modules/@types" ],
        "experimentalDecorators": true  
    },
    "include": [
        "src/**/*"
    ]
}